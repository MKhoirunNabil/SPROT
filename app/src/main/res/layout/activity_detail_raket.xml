<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailRaketActivity">

    <ImageView
        android:id="@+id/backdetailraket"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="15dp"
        android:src="@drawable/back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/bingkaidetailraket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="2dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="30dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@+id/backdetailraket">
    <ImageView
        android:id="@+id/imgdetailraket"
        android:layout_width="200dp"
        android:layout_height="300dp"
         />

    </LinearLayout>
    <TextView
        android:id="@+id/namadetailraket"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/literata"
        android:text="Nama Raket"
        android:textSize="26dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="120dp"
        android:layout_marginStart="230dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textviewstok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stok : "
        android:textSize="18dp"
        android:textStyle="italic"
        android:layout_marginTop="300dp"
        android:layout_marginStart="230dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stokdetailraket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="300dp"
        android:text="00"
        android:textColor="#ff3d47"
        android:textSize="18dp"
        android:textStyle="italic"
        app:layout_constraintStart_toEndOf="@+id/textviewstok"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textviewharga"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/literata"
        android:text="Rp;"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        android:textColor="#0095ff"
        android:layout_marginTop="330dp"
        android:layout_marginStart="230dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/hargadetailraket"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="330dp"
        android:fontFamily="@font/literata"
        android:text="00000"
        android:textColor="#0095ff"
        android:textSize="20dp"
        android:textStyle="bold|italic"
        app:layout_constraintStart_toEndOf="@+id/textviewharga"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:text="Detail:"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bingkaidetailraket" />

    <TextView
        android:id="@+id/deskdetailraket"
        android:layout_width="350dp"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:text="Dikutip dari situs resmi Kemdikbud, berikut adalah isi teks proklamasi kemerdekaan yang asli. Kami bangsa Indonesia dengan ini menjatakan kemerdekaan Indonesia. Hal2 jang mengenai pemindahan kekoeasaan d.l.l., diselenggarakan dengan tjara saksama dan dalam tempoh jang sesingkat-singkatnja."
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/deskdetailraket">

        <ImageButton
            android:id="@+id/BTNHapusRaket"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#FF0000"
            android:visibility="gone"
            android:paddingVertical="5dp"
            app:srcCompat="@drawable/delete"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

        <ImageButton
            android:id="@+id/BTNEditRaket"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#2e5bff"
            android:visibility="gone"
            android:paddingVertical="5dp"
            app:srcCompat="@drawable/edit"
            tools:ignore="TouchTargetSizeCheck,SpeakableTextPresentCheck" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>